apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: postgresql-ha
  namespace: argocd
spec:
  project: default
  source:
    repoURL: 'https://github.com/lizseo/k8s-gitops-practice.git'
    targetRevision: HEAD
    path: database/postgresql-ha
    helm:
      chart: postgresql-ha
      repoURL: https://charts.bitnami.com/bitnami
      valueFiles:
        - values.yaml  
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: database
  syncPolicy:
    automated:
      prune: true
      selfHeal: true

